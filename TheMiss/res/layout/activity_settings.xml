<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/btn_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_alpha_bg_selector"
            android:drawableLeft="@drawable/left_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/settings_title"
            android:textSize="18dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#BBBBBB" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bgcolor"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/ib_menu_settings_change_cover"
                    android:singleLine="true"
                    android:text="@string/cover"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/ib_menu_settings_change_cover"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/red_border_btn_bg"
                    android:text="@string/change"
                    android:textColor="@color/home_red_color"
                    android:textSize="14dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_menu_settings_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cover_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/profile_photo"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/ib_menu_settings_change_profile_picture"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/red_border_btn_bg"
                    android:text="@string/change"
                    android:textColor="@color/home_red_color"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp" >

                <com.ghebb.themiss.custom.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_menu_settings_profile_picture"
                    android:layout_width="@dimen/settings_profile_picture_width"
                    android:layout_height="@dimen/settings_profile_picture_width"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_female_256" 
                    android:scaleType="centerCrop"
                    app:corner_radius="65dp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_menu_settings_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/username"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" >
            </EditText>

            <RelativeLayout
	            android:id="@+id/layout24"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/import_menubg" >
	
	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="20dp"
	                android:src="@drawable/bottom_arrow" />
	
	            <Spinner
	                android:id="@+id/spinner_menu_settings_gender"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@android:color/transparent"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp" />
	
	        </RelativeLayout>
            
            <EditText
                android:id="@+id/et_menu_settings_firstname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/first_name"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_menu_settings_lastname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/last_name"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_menu_settings_city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/city"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_menu_settings_mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/mobile_number"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_menu_settings_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:gravity="center_vertical|top"
                android:hint="@string/description"
                android:padding="20dp"
                android:textSize="15dp" />

            <RelativeLayout
	            android:id="@+id/layout24"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/import_menubg" >
	
	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="20dp"
	                android:src="@drawable/bottom_arrow" />
	
	            <Spinner
	                android:id="@+id/spinner_menu_settings_language"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@android:color/transparent"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp" />

        	</RelativeLayout>
            

            <EditText
                android:id="@+id/et_menu_settings_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_menu_settings_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_settings_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg"
                android:ems="10"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_upload_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/add_social_network"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout_menu_settings_facebook"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg" >

                <TextView
                    android:id="@+id/tv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/facebook"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_settings_facebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/settings_link_unchecked" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_menu_settings_instagram"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/import_menubg" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/instagram"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_settings_instagram"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/settings_link_unchecked" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_menu_settings_save"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/menu_settings_save_bg"
                android:text="@string/save"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_menu_settings_logout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/menu_settings_save_bg"
                android:text="@string/logout_title"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_menu_settings_deactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_alpha_bg_selector"
                android:padding="10dp"
                android:text="@string/deactivate_account"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
