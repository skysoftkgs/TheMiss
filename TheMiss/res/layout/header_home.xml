<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/home_bg" >

        <Button
            android:id="@+id/btn_home_signup"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@drawable/white_border_btn_bg"
            android:text="@string/login_signup"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/ib_home_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_close" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_crown" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/login_themiss" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/home_heading_only_selfie"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="@string/home_heading_vote_your_miss"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:text="@string/home_heading_are_you_mail"
            android:textColor="@android:color/white"
            android:textSize="13dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_middle_category"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/btn_last_pictures"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/home_red_color"
            android:text="@string/home_last_pictures"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_miss_of_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/home_red_color"
            android:text="@string/home_miss_of_the_month"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <View
            android:id="@+id/View01"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_winners"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/home_red_color"
            android:text="@string/home_the_winners"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_home_time"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/tv_home_countdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="10:04:50:20"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/tv_home_miss_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="APRIL"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_home_miss_month"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="@string/miss"
            android:textColor="@color/home_red_color"
            android:textSize="14dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_home_display_mode"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <ImageButton
            android:id="@+id/ib_home_listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_display_mode_bg1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_listview_btn" />

        <ImageButton
            android:id="@+id/ib_home_gridview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_display_mode_bg"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_gridview_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_home_female_winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/home_the_winners_text1"
            android:textColor="@color/home_gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/home_the_winners_text2"
            android:textColor="@color/home_gray_text"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_female_winners_bg" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/home_the_winners_text3"
            android:textColor="@color/home_gray_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_home_winners_female_invite"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/red_border_btn_bg"
            android:text="@string/home_invite"
            android:textColor="@color/home_red_color"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/if_you_male"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/signup_and_vote"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_home_male_winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/home_the_winners_text1"
            android:textColor="@color/home_gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/home_the_winners_text4"
            android:textColor="@color/home_gray_text"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_home_winners_male_invite"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_border_btn_bg"
            android:text="@string/home_invite"
            android:textColor="@color/home_red_color"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:text="AND GET REWARDS!"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>