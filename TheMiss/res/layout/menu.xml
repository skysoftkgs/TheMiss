<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gab.themiss"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_menu_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            android:id="@+id/btn_menu_facebook"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/menu_facebook_btn"
            android:paddingLeft="30dp"
            android:text="@string/login_with_facebook"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout25"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_gray_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <EditText
            android:id="@+id/et_menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_search"
            android:ems="10"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="3dp"
            android:textSize="15dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" >
        </EditText>

        <ImageView
            android:id="@+id/imageView_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/et_menu_search"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/btn_search_clear"
            android:visibility="invisible" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_menu_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <ScrollView
        android:id="@+id/scrollView_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_menu_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_user_info"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center_horizontal"
			    android:orientation="vertical" >
			
			    <com.ghebb.themiss.custom.RoundedImageView
			        xmlns:app="http://schemas.android.com/apk/res-auto"
			        android:id="@+id/iv_menu_profile"
			        android:layout_width="100dp"
			        android:layout_height="100dp"
			        android:layout_marginTop="10dp"
			        android:src="@drawable/user_female_64"
			        android:scaleType="centerCrop"
			        app:border_color="@color/home_red_color"
			        app:border_width="2dp"
			        app:corner_radius="50dp" />
			
			    <TextView
			        android:id="@+id/tv_menu_username"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:layout_marginBottom="20dp"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="10dp"
			        android:singleLine="true"
			        android:text="user name"
			        android:textSize="16sp" />
			
			</LinearLayout>

            <LinearLayout
                android:id="@+id/layout_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_import_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_import_pictures"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_invite_friends"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_settings"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_settings"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_menu_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_notifications"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_the_contest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_the_contest"
                    android:textColor="@color/home_red_color"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_prizes"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_prizes"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_tutorial"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_rules"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_rules_and_privacy"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_help"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_help"
                    android:textColor="@color/home_red_color"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_faq"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_faq"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_menu_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/menu_contacts"
                    android:textSize="18dp" />
            </LinearLayout>
            
            <ImageButton
		        android:id="@+id/ib_menu_mail"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:layout_marginLeft="10dp"
		        android:background="@android:color/transparent"
		        android:scaleType="fitCenter" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
