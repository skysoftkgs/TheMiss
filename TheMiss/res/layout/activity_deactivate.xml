<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white" >

        <Button
            android:id="@+id/btn_logout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_alpha_bg_selector"
            android:drawableLeft="@drawable/left_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/deactivate"
            android:textSize="18dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#BBBBBB" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/deactivate_question"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/ib_logout_no"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_alpha_bg_selector"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_logout_no" />

    <TextView
        android:id="@+id/tv_logout_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_alpha_bg_selector"
        android:padding="10dp"
        android:text="@string/yes"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>
